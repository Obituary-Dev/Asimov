<%- include ("./teacherHeader") -%>
    <h1>Marks</h1>

    <table>
        <tr>
            <th>mark </th>
            <th>student </th>
            <th>promotion </th>
            <th>discipline </th>
            <th>delete </th>
            <th>edit </th>
        </tr>

        <% if(marksData.length!=0){ var i=1; marksData.forEach(function(data){ %>
            <tr>
                <td>
                    <%=data.Mark_Value %>
                </td>
                <td>
                    <%=data.Mark_Id_Student %>
                </td>
                <td>
                    <%=data.Mark_Id_Promotion %>
                </td>

                <td>
                    <%= disciplines[data.Mark_Id_Discipline]%>
                </td>
                <td><a href="/mark/delete/<%=data.Mark_Id%>">Delete</a></td>
                <td><a href="/mark/edit/<%=data.Mark_Id%>">Edit</a></td>

            </tr>
            <% i++; }) %>
                <% } else{ %>
                    <tr>
                        <td colspan="7">No Data Found</td>
                    </tr>
                    <% } %>
    </table>

    <form action="/mark/add/" method="post">
        <p>
            <label for="Mark_Value"> grade ?</label>
            <input type="text" name="Mark_Value" id="Mark_Value" autofocus required />
            <label for="Mark_Id_Discipline">discipline ?</label>
            <select name="Mark_Id_Discipline" id="Mark_Id_Discipline">
                <option value="1">Mathematics</option>
                <option value="2">French</option>
                <option value="3">Biology</option>
                <option value="4">Science</option>
                <option value="5">English</option>
            </select>
            <input type="submit" />
        </p>
    </form>